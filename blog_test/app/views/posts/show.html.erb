<p id="notice"><%= notice %></p>

<p>
  <strong>Title:</strong>
  <%= @post.title %>
</p>

<%= image_tag current_user&.avatar.url, class: "img-responsive" %>

<p>
  <strong>Author:</strong>
   <%= @post.user.email %>
</p>
<p>
  <strong><%= link_to comment.user.username,
user_posts_path(name: comment.user.username) %> said...</strong>
</p>

<p>
  <strong>Blog entry:</strong>
  <%= @post.blog_entry.html_safe %>
</p>

<p>
  <%= link_to 'Edit', edit_post_path(@post) %>
</p>

<div id="comments">
	<%= render 'comments/form', comment: @comment %>

  <% @post.comments.each do |comment| %>
    <p>
    	<%= comment.user.username %> said...<br />
    	<%= comment.comment_entry %>
		</p>
  <% end %>
</div>

<p>
  <%= link_to 'Back', posts_path %>
</p>
